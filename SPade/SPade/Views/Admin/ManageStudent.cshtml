@model IEnumerable<SPade.ViewModels.Admin.ManageStudentViewModel>
@{
    ViewBag.Title = "Manage Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Manage Student</legend>

            <div class="form-group ">
                <div>
                    <a href="AddOneStudent" class="btn btn-primary">Add Student</a>
                    <a href="BulkAddStudent" class="btn btn-primary">Bulk Add Students</a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <div class="form-group ">
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Admin No.</th>
                            <th>Student Name</th>
                            <th>Contact No.</th>
                            <th>Email</th>
                            <th>Class</th>
                            <th>Created By</th>
                            <th class="sorter-false">Update</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(Model => item.AdminNo)</td>
                                <td>@Html.DisplayFor(Model => item.Name)</td>
                                <td>@Html.DisplayFor(Model => item.ContactNo)</td>
                                <td>@Html.DisplayFor(Model => item.Email)</td>
                                <td>@Html.DisplayFor(Model => item.Class)</td>
                                <td>@Html.DisplayFor(Model => item.CreatedBy)</td>
                                @*<td>@Html.ActionLink("Update", "UpdateStudent", "Admin", new { AdminNo = item.AdminNo }, new { id = "UpdateAssignment", @class = "btn btn-primary" })</td>*@                                                                  
                                <td><a href="/admin/updatestudent/@item.AdminNo.ToLower()" class="btn btn-primary">Update Student</a></td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>


        </fieldset>
    </div>
</div>