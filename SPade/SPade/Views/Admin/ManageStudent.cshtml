@model IEnumerable<SPade.ViewModels.Admin.ManageStudentViewModel>
@{
    ViewBag.Title = "Manage Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Manage Student</legend>

            <div class="form-group ">
                <div>
                    <a href="AddOneStudent" class="btn btn-primary">Add Student</a>
                    <a href="BulkAddStudent" class="btn btn-primary">Bulk Add Students</a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <div class="form-group ">
                <!--    <div class ="row"> -->
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Student ID</th>
                            <th>Student Name</th>
                            <th>Contact No.</th>
                            <th>Email</th>
                            <th class="sorter-false">Update</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.AdminNo</td>
                            
                            
                                <td>@Html.DisplayFor(modelItem => item.Name</td>
                            
                                <td>@Html.DisplayFor(modelItem => item.Email</td>
                            
                                <td>@Html.DisplayFor (modelItem => item.ContactNo</td>

                                <td><a href="" class="btn btn-primary">Update</a></td>
                            </tr>
                            
                        }

                    </tbody>
                </table>
            </div>

        </fieldset>
    </div>
</div>