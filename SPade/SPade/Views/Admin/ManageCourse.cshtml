@model IEnumerable<SPade.ViewModels.Admin.ManageCourseViewModel>
@{
    ViewBag.Title = "Manage Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Manage Courses</legend>

            <div class="form-group ">
                <div>
                    <a href="AddCourse" class="btn btn-primary">Add Course</a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <div class="form-group ">
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Course ID</th>
                            <th>Course Name</th>
                            <th>Abbreviation</th>
                            <th>Created By</th>
                            <th>No. of Classes</th>
                            <th class="sorter-false">Update</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(Model => item.CourseId)</td>
                                <td>@Html.DisplayFor(Model => item.CourseName)</td>
                                <td>@Html.DisplayFor(Model => item.Abbreviation)</td>
                                <td>@Html.DisplayFor(Model => item.CreatedBy)</td>
                                <td>@Html.DisplayFor(Model => item.ClassCount)</td>
                                <td><a href="/Admin/UpdateCourse/@Html.DisplayFor(Model => item.CourseId)" class="btn btn-primary">Update</a></td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </fieldset>
    </div>
</div>