
@{
    ViewBag.Title = "Add Student";
}

<div class="col-md-4 col-md-offset-4 form-horizontal">
    <fieldset>

        <legend>Add Student</legend>

        <!-- studentIdInput-->
        <div class="form-group">
            <div class="col-md-12">
                <label for="studentIdInput" class="control-label">Student ID</label>
                <input id="studentIdInput" name="studentIdInput" type="text" placeholder="P1372683" class="form-control input-md" />
            </div>
        </div>

        <!-- studentNameInput-->
        <div class="form-group">
            <div class="col-md-12">
                <label for="studentNameInput" class="control-label">Name </label>
                <input id="studentNameInput" name="userNameInput" type="text" placeholder="Name" class="form-control input-md" />
            </div>
        </div>

        <!-- studentClass-->
        <div class="form-group">
            <div class="col-md-12">
                <label for="" class="control-label">Class:</label>
                <select class="form-control" id="select">
                    <option>Select a class...</option>
                    <option>DIT/1A/FT/21</option>
                    <option>DIT/1A/FT/22</option>
                    <option>DIT/1A/FT/23</option>
                </select>
            </div>
        </div>

        <!-- studentEmail-->
        <div class="form-group">
            <div class="col-md-12">
                <label for="studentEmail" class="control-label">Email </label>
                <input id="studentEmail" name="studentEmail" type="email" placeholder="abc@hotmail.com" class="form-control input-md" />
            </div>
        </div>

        <!-- passwordInput-->
        <div class="form-group">
            <div class="col-md-12">
                <label for="passwordInput" class="control-label">Password</label>
                <input id="passwordInput" name="passwordInput" type="password" placeholder="Password" class="form-control input-md" />
            </div>
        </div>

        <!-- studentContactNo-->
        <div class="form-group">
            <div class="col-md-12">
                <label for="studentContactNo" class="control-label">Contact Number</label>
                <input id="studentContactNo" name="studentContactNo" type="text" placeholder="92637846" class="form-control input-md" />
            </div>
        </div>

        <!-- registerBtn, cancelBtn -->
        <div class="form-group">
            <div class="col-md-12 ">
                <a id="btnRegister" href="/Admin/ManageStudent" class="btn btn-primary">Save</a>
                <a id="btnCancel" href="#" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </fieldset>
</div>

