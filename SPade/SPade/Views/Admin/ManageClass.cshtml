@model IEnumerable<SPade.ViewModels.Admin.ManageClassViewModel>

@{
    ViewBag.Title = "Manage Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Manage Classes</legend>

            <div class="form-group">
                <div>
                    <a href="AddOneClass" class="btn btn-primary">Add Class </a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />

                </div>
            </div>

            <div class="form-group">
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Class ID</th>
                            <th>Course</th>
                            <th>Class</th>
                            <th>Created By</th>
                            <th>No. of Lecturers</th>
                            <th>No. of Students</th>
                            <th class="sorter-false">Update</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(Model => item.ClassID)</td>
                            <td>@Html.DisplayFor(Model => item.Course)</td>
                            <td>@Html.DisplayFor(Model => item.Class)</td>
                            <td>@Html.DisplayFor(Model => item.CreatedBy)</td>
                            <td>@Html.DisplayFor(Model => item.NumLecturers)</td>
                            <td>@Html.DisplayFor(Model => item.NumStudents)</td>
                            <td><a href="/Admin/UpdateClass/@Html.DisplayFor(Model => item.ClassID)" class="btn btn-primary">Update</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </fieldset>
    </div>
</div>



