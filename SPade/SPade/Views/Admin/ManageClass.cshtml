@model IEnumerable<SPade.ViewModels.Admin.ManageClassViewModel>

@{
    ViewBag.Title = "ManageClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Manage Class</legend>

            <div class="form-group">
                <div>
                    <a href="AddOneClass" class="btn btn-primary">Add Class </a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />

                </div>
            </div>

            <div class="form-group">
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Class</th>
                            <th>Lecturer In-Charge</th>
                            <th>No. of Students</th>
                            <th class="sorter-false">Update</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(Model => item.classes.ClassName)</td>
                            <td>@Html.DisplayFor(Model => item.lecturer.StaffID)</td>
                            <td>@Html.DisplayFor(Model => item.Count)</td>
                            
                        </tr>
                        }
                    </tbody>
                    <a href="~/Views/Admin/ManageStudent.cshtml">~/Views/Admin/ManageStudent.cshtml</a>
                </table>
            </div>
        </fieldset>
    </div>
</div>



