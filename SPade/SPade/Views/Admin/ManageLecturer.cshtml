@model IEnumerable<SPade.Models.DAL.Lecturer>
@{
    ViewBag.Title = "Manage Lecturer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Manage Lecturer</legend>



            <div class="form-group">
                <div>
                    <a href="AddOneLecturer" class="btn btn-primary">Add Lecturer</a>
                    <a href="BulkAddLecturer" class="btn btn-primary">Bulk Add Lecturer</a>
                </div>
            </div>

            <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                        <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                    </div>
            </div>

            <div class="form-group">
                <!--        <div class ="row">  -->
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Staff ID</th>
                            <th>Lecturer Name</th>
                            <th>Contact No.</th>
                            <th>Email</th>
                            <th class="sorter-false">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in Model)
                         {
                            <tr>
                                <td>@Html.DisplayFor(Model => item.StaffID)</td>
                                <td>@Html.DisplayFor(Model => item.Name)</td>
                                <td>@Html.DisplayFor(Model => item.ContactNo)</td>
                                <td>@Html.DisplayFor(Model => item.Email)</td>
                                <td>@Html.ActionLink("Update", "UpdateLecturer", "Admin", new { StaffID = item.StaffID }, new { id = "UpdateLecturer", @class = "btn btn-primary" })</td>
                            </tr>                      
                             
                         }


                    </tbody>
                </table>
                <!--</div>-->

            </div>

        </fieldset>
    </div>
</div>