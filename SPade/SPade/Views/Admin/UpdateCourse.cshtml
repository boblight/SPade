@model SPade.ViewModels.Admin.AddCourseViewModel

@{
    ViewBag.Title = "UpdateCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateCourse", "Admin", FormMethod.Post))
{
    <div class="container">
        <div class="col-md-4 col-md-offset-4 form-horizontal">
            <fieldset>
                @Html.AntiForgeryToken()
                <legend>Add Module</legend>

                @Html.Hidden("CourseID")

                @Html.ValidationSummary("", new { @class = "text-danger" })

                <span class="help-block">
                    <span class="text-danger" id="slnRunError">@TempData["Error"]</span>
                </span>

                <!--Course Name-->
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Course Name</label>
                        @Html.TextBoxFor(m => Model.CourseName, new { @class = "form-control" })
                        <span class="help-block">@Html.ValidationMessage("CourseName", new { @class = "text-danger" })</span>
                    </div>
                </div>

                <!--Course Abbreviation-->
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Course Abbrevation</label>
                        @Html.TextBoxFor(m => Model.CourseAbv, new { @class = "form-control" })
                        <span class="help-block">@Html.ValidationMessage("CourseAbv", new { @class = "text-danger" })</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Update" name="command" class="btn btn-primary" />
                        <a href="javascript:history.back()" class="btn btn-default">Cancel</a>
                        <button class="btn btn-danger pull-right" data-toggle="modal" data-target="#modal">Delete</button>
                    </div>
                </div>

                <div class="modal" id="modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Are you sure you want to delete?</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <input type="submit" value="Delete" name="command" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>
    </div>
}

