@model SPade.ViewModels.Admin.AddModuleViewModel

@{
    ViewBag.Title = "Add Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("AddModule", "Admin", FormMethod.Post))
{
    <div class="container">
        <div class="col-md-4 col-md-offset-4 form-horizontal">
            <fieldset>
                @Html.AntiForgeryToken()
                <legend>Add Module</legend>

                <span class="help-block">
                    <span class="text-danger" id="slnRunError">@TempData["Error"]</span>
                </span>

                <!--Module Code-->
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Module Name</label>
                        @Html.TextBoxFor(m => Model.ModuleCode, new { @class = "form-control" })
                        <span class="help-block">@Html.ValidationMessage("ModuleCode", new { @class = "text-danger" })</span>
                    </div>
                </div>

                <!--Module Name-->
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Module Name</label>
                        @Html.TextBoxFor(m => Model.ModuleName, new { @class = "form-control" })
                        <span class="help-block">@Html.ValidationMessage("ModuleName", new { @class = "text-danger" })</span>
                    </div>
                </div>

                <!--Programming Language-->
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Programming Language</label>
                        @Html.DropDownListFor(m => Model.ProgLangId, new SelectList(Model.Languages, "LanguageId", "LangageType"), new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" id="submitBtn" name="submitBtn" value="Submit" class="btn btn-primary" />
                        <a href="javascript:history.back()" class="btn btn btn-default">Cancel</a>
                    </div>
                </div>


            </fieldset>
        </div>
    </div>
}


