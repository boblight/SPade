@model SPade.ViewModels.Admin.UpdateStudentViewModel

@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("UpdateStudent", "Admin", FormMethod.Post))
{

<div class="container">

    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <fieldset>

            <legend>Update Student</legend>

            <!-- studentNameInput-->
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-md", required = "required" })
                    <span class="help-block">@Html.ValidationMessage("Name", new { @class = "text-danger" })</span>
                </div>
            </div>

            <!-- studentClass-->
            <div class="form-group">
                <div>
                    <div class="col-md-12">
                        <label>Class</label>
                        @{
                            @Html.DropDownListFor(c => Model.ClassID, new SelectList(Model.Classes, "ClassID", "ClassName"), new { @class = "form-control" })
                        }
                    </div>
                </div>
            </div>

            <!-- studentEmail-->
            <div class="form-group">
                <div class="col-md-12">

                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-md", required = "required" })
                    <span class="help-block">@Html.ValidationMessage("Email", new { @class = "text-danger" })</span>

                </div>
            </div>

            <!-- studentContactNo-->
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.ContactNo, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control input-md", required = "required" })
                    <span class="help-block">@Html.ValidationMessage("ContactNo", new { @class = "text-danger" })</span>
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Update" name="command" class="btn btn-primary"/>
                    <input type="submit" value="Delete" name="command" class="btn btn-danger"
                           onclick="return confirm('Are you sure?')"  />
                    <a href="javascript:history.back()" class="btn btn-default">Cancel</a>
                    <!-- Show alert-->
                    @Html.Raw(TempData["msg"])
                </div>
            </div>
            @*@Request.QueryString["AdminNo"]*@
        </fieldset>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




    }