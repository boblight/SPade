
@{
    ViewBag.Title = "Admin Dashboard";
}

@Styles.Render("~/Content/dashboardstyle.css");



<div class="container">

    <div id="divMessage" runat="server"></div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Admin Dashboard</h1>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-time glyphlarge"></span>
                </div>
                <div class="panel-body">
                    <h2>Classes</h2>
                    <p>View <strong>Classes</strong> to manage</p>
                    <a href="/Admin/ManageClass" class="btn btn-primary">Manage Classes</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-certificate glyphlarge"></span>
                </div>
                <div class="panel-body">
                    <h2>Lecturers</h2>
                    <p>View <strong>Lecturers</strong> to manage</p>
                    <a href="/Admin/ManageLecturer" class="btn btn-primary">Manage Lecturers</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-user glyphlarge"></span>
                </div>
                <div class="panel-body">
                    <h2>Students</h2>
                    <p>View <strong>Students</strong> to manage</p>
                    <a href="/Admin/ManageStudent" class="btn btn-primary">Manage Students</a>
                </div>
            </div>
        </div>


        <hr />


        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-book glyphlarge"></span>
                </div>
                <div class="panel-body">
                    <h2>Modules</h2>
                    <p>View <strong>Modules</strong> to manage</p>
                    <a href="/Admin/ManageModule" class="btn btn-primary">Manage Modules</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list-alt glyphlarge"></span>
                </div>
                <div class="panel-body">
                    <h2>Courses</h2>
                    <p>View <strong>Courses</strong> to manage</p>
                    <a href="/Admin/ManageCourse" class="btn btn-primary">Manage Courses</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-user glyphlarge"></span>
                </div>
                <div class="panel-body">
                    <h2>Admins</h2>
                    <p>View <strong>Admins</strong> to manage</p>
                    <a href="/Admin/ManageAdmin" class="btn btn-primary">Manage Admins</a>
                </div>
            </div>
        </div>

    </div>

    <hr />

    <div class="jumbotron">
        <div class="container">
            <div class="row">

                <div class="col-md-4 col-md-offset-2">
                    <span class="glyphicon glyphicon-remove-circle glyphextralarge"></span>
                </div>

                <div class="col-md-6">
                    <h2>Purge</h2>
                    <p><strong>Purge</strong> Submission/Testcase/Solution data from database</p>
                    <a href="/Admin/Purge" class="btn btn-primary">Purge Files</a>
                </div>
            </div>
        </div>
    </div>

</div>

