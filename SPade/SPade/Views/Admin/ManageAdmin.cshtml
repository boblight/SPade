@model IEnumerable<SPade.ViewModels.Admin.ManageAdminViewModel>
@{
    ViewBag.Title = "Manage Admins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Manage Admins</legend>

            <div class="form-group ">
                <div>
                    <a href="AddOneAdmin" class="btn btn-primary">Add Admin</a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <div class="form-group ">
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Admin ID</th>
                            <th>Name</th>
                            <th>Contact No</th>
                            <th>Email</th>
                            <th>Created By</th>
                            <th class="sorter-false">Update</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(Model => item.AdminId)</td>
                                <td>@Html.DisplayFor(Model => item.Name)</td>
                                <td>@Html.DisplayFor(Model => item.ContactNo)</td>
                                <td>@Html.DisplayFor(Model => item.Email)</td>
                                <td>@Html.DisplayFor(Model => item.CreatedBy)</td>
                                <td><a href="/Admin/UpdateAdmin/@Html.DisplayFor(Model => item.AdminId)" class="btn btn-primary">Update</a></td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </fieldset>
    </div>
</div>