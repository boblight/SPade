@model SPade.ViewModels.Admin.AddAdminViewModel

@{
    ViewBag.Title = "AddOneAdmin";
}

@using (Html.BeginForm("AddOneAdmin", "Admin", FormMethod.Post))
{

    <div class="col-md-4 col-md-offset-4 form-horizontal">

        <fieldset>
            @Html.AntiForgeryToken()
            <legend>Add new Administrator</legend>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- adminIdInput-->
            <div class="form-group">
                <div class="col-md-12">
                    <label>Admin Id</label>
                    @Html.TextBoxFor(m => m.AdminID, new { @class = "form-control input-md", required = "required" })
                    <span class="help-block">With 'a' (e.g. a1234567)</span>
                    <span class="help-block">@Html.ValidationMessage("AdminID", new { @class = "text-danger" })</span>
                </div>
            </div>

            <!-- adminNameInput-->
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.FullName, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control input-md", required = "required" })
                    <span class="help-block">e.g. John Tan</span>
                    <span class="help-block">@Html.ValidationMessage("Name", new { @class = "text-danger" })</span>
                </div>
            </div>

            <!-- adminEmail-->
            <div class="form-group">
                <div class="col-md-12">

                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-md", required = "required" })
                    <span class="help-block">e.g. abc@hotmail.com</span>
                    <span class="help-block">@Html.ValidationMessage("Email", new { @class = "text-danger" })</span>

                </div>
            </div>

            <!-- adminContactNo-->
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.ContactNo, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", required = "required" })
                    <span class="help-block">e.g. 12345678</span>
                    <span class="help-block">@Html.ValidationMessage("ContactNo", new { @class = "text-danger" })</span>
                </div>
            </div>

            <!-- registerBtn, cancelBtn -->
            <div class="form-group">
                <div class="col-md-12 ">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a id="btnCancel" href="javascript:history.back()" class="btn btn-default">Cancel</a>
                </div>
            </div>

        </fieldset>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}