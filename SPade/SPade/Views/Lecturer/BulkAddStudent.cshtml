
@{
    ViewBag.Title = "Bulk Add Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-md-8 col-md-offset-2 form-horizontal">
        <fieldset>
            <legend>Bulk Add Students</legend>


            <p>
                1. Please enter the details in the relevant fields.
            </p>

            @*
                <div class="form-group">
                    <div class="col-md-12">
                        <label class=" control-label" for="filebutton">Upload completed .CSV file</label>
                        <input id="AssignmentFile" type="file" style="border: solid 1px red" />
                    </div>
                </div>*@

            @*Adding of Relevant Fields*@

            <div class="form-group">
                
                <fieldset id="studentInput">     

                <div class="col-md-2">
                    <input type="text" name="adminInput[]" id="adminInput" placeholder="Admin No" class="form-control" />
                </div>

                <div class="col-md-3">
                    <input type="text" name="nameInput[]" id="nameInput" placeholder="Name" class="form-control" />
                </div>

                <div class="col-md-3">
                    <input type="text" name="emailInput[]" id="emailInput" placeholder="Email" class="form-control" />
                </div>

                <div class="col-md-3">
                    <input type="text" name="contactInput[]" id="contactInput" placeholder="Contact" class="form-control" />
                </div>

                <div class="col-md-1">
                    <button class="btn btn-default removeButton" type="button">
                        <span class="glyphicon-minus"></span>
                    </button>
                </div>
                    
                    
                </fieldset> @*end of studentInput*@

            </div>
    
    <div id="errorStudentMessage"></div>
            
            


            @*Add Button*@ 
            <div class="form-group">
                <div class="col-md-12">
                    <button class="btn btn-default" id="addButton" placeholder="Add Column">Add Column</button>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <a href="ManageClassesAndStudents" class="btn btn-primary">Submit</a>
                    <a href="javascript:history.back()" class="btn btn-default">Cancel</a>
                </div>
            </div>
        </fieldset>
    </div>
</div>

<script>
    $('#addButton').on('click', function () {
        $('#studentInput').append('<div class="col-md-2"><input type="text" name="adminInput[]" id="adminInput" placeholder="Admin No" class="form-control" /></div>');
        $('#studentInput').append('<div class="col-md-3"><input type="text" name="nameInput[]" id="nameInput" placeholder="Name" class="form-control" /></div>');
        $('#studentInput').append('<div class="col-md-3"><input type="text" name="emailInput[]" id="emailInput" placeholder="Email" class="form-control" /></div>');
        $('#studentInput').append('<div class="col-md-3"><input type="text" name="contactInput[]" id="contactInput" placeholder="Contact" class="form-control" /></div>');
        $('#studentInput').append('<div class="col-md-1"><button class="btn btn-default removeButton" type="button"><span class="glyphicon-minus"></span></button></div>');
        return false; // prevent form submission
    });

    $('#studentInput').on('click', '.removeButton', function ()
    {
        $(this).parent().remove();
        return false; // prevent form submission
    });
</script>
