@model List<SPade.ViewModels.Lecturer.ManageAssignmentViewModel>

@{
    ViewBag.Title = "Manage Assignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <fieldset>
            <legend>Assignments</legend>

            <div class="form-group">
                <div>
                    <a href="AddAssignment" class="btn btn-primary">Add Assignment</a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <table class="table table-striped table-hover tablesorter">
                <thead>
                    <tr>
                        <th>Assignment</th>
                        <th>Issued On</th>
                        <th>Issued To</th>
                        <th>Start Date</th>
                        <th>Due Date</th>
                        <th class="sorter-false">Update</th>
                        <th class="sorter-false">View Testcase</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(Model => item.Assignment.AssgnTitle)</td>
                                <td>@Html.DisplayFor(Model => item.Assignment.CreateAt)</td>
                                <td>@Html.DisplayFor(Model => item.Classes)</td>
                                <td>@Html.DisplayFor(Model => item.Assignment.StartDate) </td>
                                <td>@Html.DisplayFor(Model => item.Assignment.DueDate)</td>
                                <td>
                                    @Html.ActionLink("Update", "UpdateAssignment", "Lecturer", new { AssignmentId = item.Assignment.AssignmentID }, new { id = "assignmentId", @class = "btn btn-primary" })
                                </td>
                                <td>
                                    @Html.ActionLink("View", "ViewTestcase", "Lecturer", new { AssignmentId = item.Assignment.AssignmentID }, new { id = "assignmentId", @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </fieldset>
    </div>
</div>
