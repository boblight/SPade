@model IEnumerable<SPade.ViewModels.Lecturer.ManageClassesViewModel>

@{
    ViewBag.Title = "Manage Classes & Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <fieldset>
            <legend>Classes you manage</legend>

            <div class="form-group">
                <div>
                    <a href="BulkAddStudent" class="btn btn-primary">Bulk Add Students</a>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <table class="table table-striped table-hover tablesorter" id="classTable">
                <thead>
                    <tr>
                        <th>Class</th>
                        <th>No. of Students</th>
                        <th class="sorter-false">View Class</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.ClassName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.NumberOfStudents)
                            </td>
                            <td>
                                <a href="ViewStudentsByClass" class="btn btn-primary">View Class</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </fieldset>
    </div>
</div>
