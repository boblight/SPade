@model IEnumerable<SPade.ViewModels.Lecturer.ManageClassesViewModel>

@{
    ViewBag.Title = "Manage Classes & Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="col-md-6 col-md-offset-3">

        <fieldset>
            <legend>Classes you manage</legend>

            <!-- Action Buttons -->

            <div class="row">
                <div class="col-md-6">
                    <a href="BulkAddStudent" class="btn btn-primary">Bulk Add Students</a>
                    <button class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
                </div>
            </div>

                        <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <table class="table table-striped table-hover tablesorter" id="classTable">
                <thead>
                    <tr>
                        <th>Class</th>
                        <th>No. of Students</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.ClassName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.NumberOfStudents)
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
            <script>
                $(document).ready(function () {
                    $("#classTable").tablesorter();
                });
            </script>
        </fieldset>
    </div>
</div>
