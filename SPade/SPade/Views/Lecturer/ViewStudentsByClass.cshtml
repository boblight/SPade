@model IEnumerable<SPade.ViewModels.Lecturer.ViewStudentsByClassViewModel>


@{
    ViewBag.Title = "View Students by Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-10 col-md-offset-1 ">
        <fieldset>
            <legend>@ViewBag.ClassName</legend>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <div class="form-group">
                <table class="table table-striped table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Contact Number</th>
                            <th class="sorter-false">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var s in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(Model => s.AdminNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(Model => s.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(Model => s.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(Model => s.ContactNo)
                                    </td>
                                    <td><a href="/Lecturer/UpdateStudent/@s.AdminNo.ToLower()" class="btn btn-primary">Update Student</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </fieldset>
    </div>
</div>
