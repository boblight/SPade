@model SPade.ViewModels.Lecturer.ViewTestCaseViewModel

@{
    ViewBag.Title = "ViewTestcase";
}

@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Testcase Inputs</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    foreach (var testcase in Model.testcases)
                    {
                        <tr>
                            <td>@count</td>
                            <td>
                                <ol type="i">
                                    @foreach (var input in testcase.inputs)
                                    {
                                        <li>@input</li>
                                    }
                                </ol>
                            </td>
                        </tr>

                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>