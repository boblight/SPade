@model IEnumerable<SPade.ViewModels.Lecturer.ViewResultsViewModel>

@{
    ViewBag.Title = "View Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-8 col-md-offset-2">
        <fieldset>
            <legend>View Results</legend>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <select id="selectclass" name="selectclass" class="form-control">
                            <option value="1">DIT/1A/FT/21</option>
                            <option value="2">DIT/1A/FT/22</option>
                            <option value="4">DIT/1A/FT/23</option>
                            <option value="5">DIT/1A/FT/24</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <select id="selectAssignment" name="selectAssignment" class="form-control">
                            <option value="1">Java Practical 1</option>
                            <option value="2">Java Practical 2</option>
                            <option value="3">Java Practical 3</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <table class="table table-striped table-hover tablesorter">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Result</th>
                        <th class="sorter-false">Student's solution</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Result)
                            </td>
                            <td><a href="@Html.DisplayFor(model => item.Solution)"><span class="glyphicon glyphicon-download-alt btn btn-primary"></span></a></td>
                        </tr>
                    }
                </tbody>

