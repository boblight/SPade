@model SPade.ViewModels.Lecturer.ViewResultsViewModel

@{
    ViewBag.Title = "View Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/tablescript")
@Styles.Render("~/bundles/tablestyle")

<div class="container">
    <div class="col-md-8 col-md-offset-2">
        <fieldset>
            <legend>View Results</legend>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <select id="selectClass" name="selectClass" class="form-control">

                            @{
                                int n = 0;
                                foreach (var i in Model.classIds)
                                {

                                    <option value="@i">@Model.classNames[n]</option>
                                    n++;
                                }
                            }

                        </select>
                    </div>
                    <div class="col-md-4">
                        <select id="selectAssignment" name="selectAssignment" class="form-control">


                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                    <input id="search" name="search" class="form-control" placeholder="Search" type="text" data-column="any" />
                </div>
            </div>

            <table class="table table-striped table-hover tablesorter">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Result</th>
                        <th class="sorter-false">Student's Solution</th>
                    </tr>
                </thead>


                <tbody>


                </tbody>


            </table>
        </fieldset>
    </div>
</div>



<script>


    $(document).ready(function () {

        $.ajax({
            url: getAssgn(),
            success: function () {
                fillTable();
            }
        });

    });


    $('select').on('change', function (e) {
        fillTable();
    });


    function fillTable() {

        $.ajax({
            url: this.href,
            type: 'POST',
            data: '{\'Class\':\'' + $('#selectClass').val() + '\', \'Assignment\':\'' + $('#selectAssignment').val() + '\'}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {


                function updateTable() {

                    var tableContents = "";

                    $.each(data, function (key, val) {

                        tableContents += '<tr><td>' + val.adminno.toUpperCase() + '</td><td>' + val.name + '</td><td>' + val.grade * 100 + '%</td><td><a href=\"' + val.filepath + '\"><span class=\"glyphicon glyphicon-download-alt btn btn-primary\"></span></a></td></tr>';

                    });

                    $('tbody').html(tableContents);
                }

                $.ajax({
                    url: updateTable(),
                    success: function () {
                        $('table').trigger("update");
                    }
                });

            },
            error: function () {
            }
        });
        

    }

    function getAssgn() {
        $.ajax({
            url: 'GetAssignment',
            type: 'POST',
            data: '{\'Class\':\'' + $('#selectClass').val() + '\'}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {

                $.each(data, function (key, val) {

                    $('#selectAssignment')
                             .append($('<option>', { value: val.AssignmentID })
                             .text(val.AssgnTitle));

                });

            },
            error: function () {
            }
        });
    }

</script>