@model IEnumerable<SPade.Models.Assignment>

@{
    ViewBag.Title = "View Assignment";
}

@Scripts.Render("~/Scripts/jquery.tablesorter.min.js");

<div class="col-md-8 col-md-offset-2">
    <fieldset>
        <legend>Assignments</legend>
        <div class="form-group">

            <!-- tabs -->
            <ul class="nav nav-tabs">

                <li class="active">
                    <a href="#pendingAssignments" data-toggle="tab">Pending</a>
                </li>

                <li class="">
                    <a href="#completedAssignments" data-toggle="tab">
                        Completed
                    </a>
                </li>
            </ul>

            <div id="completedContent" class="tab-content">

                <!-- first tab -->
                <div class="tab-pane fade active in" id="pendingAssignments">
                    <table id="viewPendingAssignmentsTable" class="table table-striped table-hover tablesorter">
                        <thead>
                            <tr>
                                <th>Assignment</th>
                                <th>Issued By</th>
                                <th>Due Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.AssgnID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreateBy)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DueDate)</td>
                                    <td><a href="/Student/SubmitAssignment/@Html.DisplayFor(modelItem => item.AssgnID)">View</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

                <!-- second tab -->
                <div class="tab-pane fade" id="completedAssignments">
                    <table id="viewSubmittedAssignments" class="table table-striped table-hover tablesorter">
                        <thead>
                            <tr>
                                <th>Assignment</th>
                                <th>Issued by</th>
                                <th>Due date</th>
                                <th>Submitted on</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Sample-->
                            <tr>
                                <td>Java Intro Practical 1</td>
                                <td>Mr Low</td>
                                <td>5/5/2016</td>
                                <td>10/5/2016</td>
                                <td><a href="CompletedAssignment.aspx">View</a></td>
                            </tr>
                            <tr>
                                <td>Java Intro Practical 2</td>
                                <td>Ms Low</td>
                                <td>6/5/2016</td>
                                <td>10/5/2016</td>
                                <td><a href="SubmitAssignment2.aspx">View</a></td>
                            </tr>
                            <tr>
                                <td>Java Practical 3</td>
                                <td>Mr Tan</td>
                                <td>7/5/2016</td>
                                <td>11/5/2016</td>
                                <td><a href="SubmitAssignment2.aspx">View</a></td>
                            </tr>
                            <tr>
                                <td>Java Practical 4</td>
                                <td>Mr Chong</td>
                                <td>8/5/2016</td>
                                <td>12/5/2016</td>
                                <td><a href="SubmitAssignment2.aspx">View</a></td>
                            </tr>


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <script>
            $(document).ready(function () {
                $("#viewPendingAssignmentsTable").tablesorter();
                $("#viewSubmittedAssignments").tablesorter();
            });
        </script>
    </fieldset>
</div>

