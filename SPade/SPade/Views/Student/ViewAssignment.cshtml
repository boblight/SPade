@model IEnumerable<SPade.Models.Assignment>

@{
    ViewBag.Title = "View Assignment";
}

@Scripts.Render("~/Scripts/jquery.tablesorter.combined.js")
@Styles.Render("~/bundles/tablestyle")

<script>
    $(document).ready(function () {
        $(function () {
            $("#pending").tablesorter(
            {
                theme: 'bootstrap',

                widthFixed: true,
                headerTemplate: '{content} {icon}', // Add icon for various themes
                sortList: [[2, 0]],
                widgets: ['stickyHeaders', 'uitheme', 'filter'],

                widgetOptions: {
                    filter_external: '#searchpending',
                    filter_columnFilters: false
                }

            });

            $("#completed").tablesorter(
            {
                theme: 'bootstrap',

                widthFixed: true,
                headerTemplate: '{content} {icon}', // Add icon for various themes
                sortList: [[3, 0]],
                widgets: ['stickyHeaders', 'uitheme', 'filter'],

                widgetOptions: {
                    filter_external: '#searchcompleted',
                    filter_columnFilters: false
                }

            });
        });
    });
</script>

<div class="col-md-8 col-md-offset-2">
    <fieldset>
        <legend>Assignments</legend>

        <div class="form-group">

            <!-- tabs -->
            <ul class="nav nav-tabs">

                <li class="active">
                    <a href="#pendingAssignments" data-toggle="tab">Pending</a>
                </li>

                <li class="">
                    <a href="#completedAssignments" data-toggle="tab">
                        Completed
                    </a>
                </li>
            </ul>

            <div id="completedContent" class="tab-content">

                <!-- first tab -->
                <div class="tab-pane fade active in" id="pendingAssignments">

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                            <input id="searchpending" name="searchpending" class="form-control" placeholder="Search" type="text" data-column="any" />
                        </div>
                    </div>

                    <table id="pending" class="table table-striped table-hover tablesorter">
                        <thead>
                            <tr>
                                <th>Assignment</th>
                                <th>Issued By</th>
                                <th>Due Date</th>
                                <th class="sorter-false">View Assignment</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.AssgnID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreateBy)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DueDate)</td>
                                    <td><a href="/Student/SubmitAssignment/@Html.DisplayFor(modelItem => item.AssgnID)" class="btn btn-primary">View</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

                <!-- second tab -->
                <div class="tab-pane fade" id="completedAssignments">

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
                            <input id="searchcompleted" name="searchcompleted" class="form-control" placeholder="Search" type="text" data-column="any" />
                        </div>
                    </div>

                    <table id="completed" class="table table-striped table-hover tablesorter">
                        <thead>
                            <tr>
                                <th>Assignment</th>
                                <th>Issued by</th>
                                <th>Due date</th>
                                <th>Submitted on</th>
                                <th class="sorter-false">View Assignment</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Sample-->
                            <tr>
                                <td>Java Intro Practical 1</td>
                                <td>Mr Low</td>
                                <td>5/5/2016</td>
                                <td>10/5/2016</td>
                                <td><a href="CompletedAssignment.aspx" class="btn btn-primary">View</a></td>
                            </tr>
                            <tr>
                                <td>Java Intro Practical 2</td>
                                <td>Ms Low</td>
                                <td>6/5/2016</td>
                                <td>10/5/2016</td>
                                <td><a href="SubmitAssignment2.aspx" class="btn btn-primary">View</a></td>
                            </tr>
                            <tr>
                                <td>Java Practical 3</td>
                                <td>Mr Tan</td>
                                <td>7/5/2016</td>
                                <td>11/5/2016</td>
                                <td><a href="SubmitAssignment2.aspx" class="btn btn-primary">View</a></td>
                            </tr>
                            <tr>
                                <td>Java Practical 4</td>
                                <td>Mr Chong</td>
                                <td>8/5/2016</td>
                                <td>12/5/2016</td>
                                <td><a href="SubmitAssignment2.aspx" class="btn btn-primary">View</a></td>
                            </tr>


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
