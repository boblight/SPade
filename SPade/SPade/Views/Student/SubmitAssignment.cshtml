
@{
    ViewBag.Title = "Submit Assignment";
}

<div class="col-md-4 col-md-offset-4 form-horizontal">
    <fieldset>
        <legend>Assignment</legend>

        <!-- QuestionTextArea -->
        <div class="form-group">
            <div class="col-md-12">
                <div class="jumbotron col-md-12">
                    <p>
                        Print out a pyramid like this:
                        <br />
                        *
                        <br />
                        **
                        <br />
                        ***
                        <br />
                        ****
                        <br />
                        *****
                        <br />
                        *****
                        <br />
                        ****
                        <br />
                        ***
                        <br />
                        **
                        <br />
                        *
                        <br />
                        (Hint: Use 2 for loop and if else statements.)
                    </p>
                </div>
                <label class=" control-label">Due date: 9/11/2016</label><br />
                <label class=" control-label ">Issued by: Mr Low</label><br />
                <label class=" control-label">Number of attempts remaining: 2</label>
            </div>

        </div>

        <!-- File Button -->
        <div class="form-group">
            <div class="col-md-12">
                <label class=" control-label" for="filebutton">Upload Solution</label>
                <input id="AssignmentFile" type="file" style="border: solid 1px red" runat="server" />
                <!--<asp:FileUpload ID="submissionFile" CssClass="form-control" runat="server" />-->
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <div class="col-md-10 ">
                <!--<a id="btnSubmit" href="#" class="btn btn-primary" onclick="uploadSolution()" runat="server">Submit</a>-->
                <a id="btnSubmit" href="#" class="btn btn-primary">Submit</a>
                <!--<asp:Button ID="submitSol" CssClass="btn btn-primary" Text="Submit" OnClick="btnSubmit_Click" runat="server" />-->
                <a id="btnCancel" href="#" class="btn btn-default">Cancel</a>
            </div>
        </div>

        <!-- modal to show result of solution -->
        <div id="resultModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Assignment Grade</h4>
                    </div>
                    <div class="modal-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Output</th>
                                    <th>Grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <label id="outputSol" runat="server"></label>
                                    </td>
                                    <td>
                                        <label id="grade" runat="server"></label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <a href="ViewAssignments.aspx" class="btn btn-danger">Close</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <asp:Label ID="lblmessage" runat="server" />
            </div>
        </div>

        <script>
            function showResult() {
                $('#resultModal').modal('toggle');
            }
        </script>

    </fieldset>
</div>


