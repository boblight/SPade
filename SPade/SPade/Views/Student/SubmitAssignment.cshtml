@model IEnumerable<SPade.Models.Assignment>

@{
    ViewBag.Title = "Submit Assignment";
}

<div class="col-md-4 col-md-offset-4 form-horizontal">
    <fieldset>
        <legend>Assignment</legend>

        @foreach (var item in Model)
        {
            <!-- QuestionTextArea -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="jumbotron col-md-12">
                        <p>
                            @Html.DisplayFor(modelItem => item.Describe)
                            <!--
                            Print out a pyramid like this:
                            <br />
                            *
                            <br />
                            **
                            <br />
                            ***
                            <br />
                            ****
                            <br />
                            *****
                            <br />
                            *****
                            <br />
                            ****
                            <br />
                            ***
                            <br />
                            **
                            <br />
                            *
                            <br />
                            (Hint: Use 2 for loop and if else statements.)
                                -->
                        </p>
                    </div>
                    <label>Due date: </label>@Html.DisplayFor(modelItem => item.DueDate)<br />
                    <label>Posted by: </label>@Html.DisplayFor(modelItem => item.CreateBy)<br />
                    <label>Number of attempts remaining: </label>@Html.DisplayFor(modelItem => item.MaxAttempt)
                </div>
            </div>
        }

        <!-- File Button -->
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label" for="AssignmentFile">Upload Solution</label>
                <input id="AssignmentFile" class="glyphicon-upload" type="file"  runat="server" />
                <!--<asp:FileUpload ID="submissionFile" CssClass="form-control" runat=style="border: solid 1px red""server" />-->
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <div class="col-md-10 ">
                <!--<a id="btnSubmit" href="#" class="btn btn-primary" onclick="uploadSolution()" runat="server">Submit</a>-->
                <a id="btnSubmit" href="#" class="btn btn-primary">Submit</a>
                <!--<asp:Button ID="submitSol" CssClass="btn btn-primary" Text="Submit" OnClick="btnSubmit_Click" runat="server" />-->
                <a id="btnCancel" href="#" class="btn btn-default">Cancel</a>
            </div>
        </div>

        <!-- modal to show result of solution -->
        <div id="resultModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Assignment Grade</h4>
                    </div>
                    <div class="modal-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Output</th>
                                    <th>Grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <label id="outputSol"></label>
                                    </td>
                                    <td>
                                        <label id="grade"></label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <a href="ViewAssignments.aspx" class="btn btn-danger">Close</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label id="lblmesseage"></label>
            </div>
        </div>

        <script>
            function showResult() {
                $('#resultModal').modal('toggle');
            }
        </script>

    </fieldset>
</div>


