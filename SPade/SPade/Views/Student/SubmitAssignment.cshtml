@model SPade.ViewModels.Student.SubmitAssignmentViewModel

@{
    ViewBag.Title = "Submit Assignment";
}

<div class="col-md-4 col-md-offset-4 form-horizontal">
    <fieldset>

        @using (Html.BeginForm("SubmitAssignment", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            var item = Model;
            <!-- To change assignment id to assignment title when database updated -->
            <legend>@Html.DisplayFor(modelItem => modelItem.ModuleCode):  @Html.DisplayFor(modelItem => modelItem.AssgnID)</legend>

            <!-- QuestionTextArea -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="jumbotron col-md-12">
                        <p>
                            @Html.DisplayFor(modelItem => modelItem.Describe)
                        </p>
                    </div>
                    <label>Due date: </label>@Html.DisplayFor(modelItem => modelItem.DueDate)<br />
                    <label>Posted by: </label>@Html.DisplayFor(modelItem => modelItem.CreateBy)<br />
                    <label>Number of attempts remaining: </label>@Html.DisplayFor(modelItem => modelItem.MaxAttempt)
                </div>
            </div>

        <!-- File Button -->
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label" for="AssignmentFile">Upload Solution</label>
                    <!--<input id="AssignmentFile" class="glyphicon-upload" style="border: solid 1px red" type="file" />-->
                    @Html.TextBoxFor(m => m.File, new { type = "file" })
                    @Html.ValidationMessageFor(m => m.File)
                </div>
            </div>

        <!-- Button -->
                <div class="form-group">
                    <div class="col-md-10 ">
                        <input type="submit" class="btn btn-primary" value="Submit" />
                        <a id="btnCancel" href="#" class="btn btn-default">Cancel</a>
                    </div>
                </div>
        }
        <!--end of form-->

        <div class="form-group">
            <div class="col-md-10">
                <label id="lblmesseage"></label>
            </div>
        </div>

        <script>
            function showResult() {
                $('#resultModal').modal('toggle');
            }
        </script>

    </fieldset>
</div>
